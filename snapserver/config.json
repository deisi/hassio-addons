{
  "name": "snapserver",
  "version": "0.12",
  "slug": "snapserver",
  "description": "Snapcast server addon",
  "startup": "before",
  "url": "https://github.com/badaix/snapcast",
  "boot": "auto",
  "privileged": ["NET_ADMIN"],
  "arch": ["armhf", "amd64"],
  "host_network": "true",
  "map": ["share:rw"],
  "options": {
    "args": "--stream pipe:///share/snapfifo?name=default"
  },
  "tmpfs": "size=1m,uid=1234,rw",
  "schema": {
    "args": "str"
  }
}
